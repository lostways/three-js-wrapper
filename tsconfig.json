{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "declarationDir": "build/dts",
    "outDir": "build",
    "rootDir": ".",
  },
  "include": ["./src/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "build", "dist"]
}
